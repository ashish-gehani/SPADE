print_help () 
{
	echo "spade start | stop | dig | controller | nodaemon"
	echo "'spade start' : starts SPADE daemon"
	echo "'spade stop' : stops SPADE daemon"
	echo "'spade dig' : starts interactive SPADE dig query client"
	echo "'spade controller' : starts interactive SPADE controller client"
	echo "'spade nodaemon' : starts SPADE and prints logs to stdout"
	echo "'spade help' : prints this menu"
}

SPADE_ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/../ && pwd )"
pushd ${SPADE_ROOT} > /dev/null

if [ $# -eq 0 ] ; then 
	print_help
else

	if [ $1 = "start" ] ; then
		java -cp "./build:./lib/*" -server -Xms128M -Xmx512M spade.utility.Daemonizer "$@"
	elif [ $1 = "stop" ] ; then
		java -cp "./build:./lib/*" -server -Xms128M -Xmx512M spade.utility.Daemonizer "$@"
	elif [ $1 = "dig" ] ; then
		java -cp '../build:../lib/*' spade.client.QueryClient
	elif [ $1 = "controller" ] ; then
		java -cp './build:./lib/*' spade.client.ControlClient
	elif [ $1 = "nodaemon" ] ; then
		java -cp "./build:./lib/*" -server -Xms128M -Xmx512M spade.core.Kernel
	else
		print_help
	fi	

fi

popd > /dev/null
