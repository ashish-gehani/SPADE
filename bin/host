print_help(){
	echo "host (-o | -p) <filepath>"
	echo ""
	echo "'host -o <filepath>' : Reads the current host info and writes to the specified file"
	echo "'host -p <filepath>' : Prints the host info in the specified file (to verify that it is written correctly)"
	echo "'host help' : Prints this message"
}

SPADE_ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/../ && pwd )"
CLASSPATH="$SPADE_ROOT/build:$SPADE_ROOT/lib/*"
JAVALIBPATH="$SPADE_ROOT/lib/"
JVMARGS="-Xms128M"

pushd "${SPADE_ROOT}" > /dev/null

if [ $# -ne 2 ] ; then
	print_help
else
	if [ $1 = "-o" ] || [ $1 = "-p" ] ; then
		java -Djava.library.path="$JAVALIBPATH" -cp "$CLASSPATH" $JVMARGS spade.reporter.audit.HostInfo "$@"
	else
		print_help
	fi

fi

popd > /dev/null
